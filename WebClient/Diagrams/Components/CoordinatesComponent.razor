<div class="card">
    <div class="card-body">
        <h4>Please put in the coordinates:</h4>
        <div>
            <label>Lattitude:</label>
            <input type="number" step="any" @bind="@Node.SnorkelInConfiguration.Lattitude"/>
            <label>Longitude:</label>
            <input type="number" step="any" @bind="@Node.SnorkelInConfiguration.Longitude"/>
        </div>    
    </div>
    @foreach (var port in Node.Ports)
    {
        <PortRenderer Port="port" />
    }
</div>

@code{
    [Parameter]
    public CoordinatesNode Node { get; set; }
}
